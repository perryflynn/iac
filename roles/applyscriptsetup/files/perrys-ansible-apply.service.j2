[Unit]
Description=Perrys Ansible Apply
Requires=network-online.target
After=network-online.target
Before=lightdm.service getty@tty1.service

[Service]
Type=oneshot
Restart=no
User=root
Group=root
StandardOutput=journal+console
StandardError=journal+console
ExecStart={{applyscript_scriptpath}}
Environment="HOME=/root"
Environment="PERRY_ANSIBLE_SERVICE=1"

[Install]
WantedBy=multi-user.target
